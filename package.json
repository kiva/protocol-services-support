{
  "name": "protocol-services-support",
  "version": "1.0.0",
  "private": false,
  "description": "support services for protocol stack",
  "license": "Apache-2.0",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiva/protocol-services-support.git"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "rimraf dist && tsc && node -r dotenv/config dist/main.js",
    "start:debug": "nodemon --legacy-watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "node -r dotenv/config node_modules/.bin/jest --runInBand  --forceExit",
    "test:local": "NODE_ENV=LOCAL node -r dotenv/config node_modules/.bin/jest --runInBand -- local",
    "test:integration": "NODE_ENV=LOCAL node -r dotenv/config node_modules/.bin/jest --runInBand -- integration",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "typeorm:migration": "node --require ts-node/register ./node_modules/typeorm/cli.js migration:create -d src/db/migration -n"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.14",
    "@nestjs/core": "^7.6.14",
    "@nestjs/swagger": "^4.7.16",
    "@nestjs/typeorm": "^7.1.5",
    "aries-controller": "1.0.82",
    "axios": "^0.21.2",
    "class-transformer": "^0.4.0",
    "crypto-random-string": "^3.3.1",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.5.1",
    "protocol-common": "0.1.47",
    "typeorm": "^0.2.31"
  },
  "devDependencies": {
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3"
  },
  "jest": {
    "globals": {
      "factories": {}
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "tsc && node -r dotenv/config dist/main.js"
  }
}
